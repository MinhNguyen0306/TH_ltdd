<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_ca"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_ca"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ariana"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_ten_khoa_hoc"
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Ten khoa hoc"/>
                    <TextView
                        android:id="@+id/txt_ten_thuong_goi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:text="Ten thuong goi"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_dac_tinh"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:text="Dac tinh"/>
                <TextView
                    android:id="@+id/txt_mau_sac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="mau sac"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>