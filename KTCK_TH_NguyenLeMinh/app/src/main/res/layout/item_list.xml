<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bg_list"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/img_casi"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ariana"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_ten"
                    android:layout_width="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Ten ca si"/>
                <TextView
                    android:id="@+id/txt_ngedanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:text="Nghe danh ca si"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_quocgia"
                android:layout_width="wrap_content"
                android:layout_marginVertical="15dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Quoc gia ca si"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="So sao ca si"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>